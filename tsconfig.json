{
    "compilerOptions": {
        "module": "esnext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "declaration": false,
        "jsx": "react",
        "jsxFactory": "h"
    },
    "include": [
        "src/**/*"
    ]
}